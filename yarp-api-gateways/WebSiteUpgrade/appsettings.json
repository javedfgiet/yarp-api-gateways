{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "YARP": {
    "Routes": {
      "randomRoute": {
        "ClusterId": "randomCluster",
        "Match": {
          "Path": "/random"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/random"
          }
        ]
      },
      "cathcAll": {
        "ClusterId": "catchAllCluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "randomCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "Blazor": {
            "Address": "https://localhost:7158/courses/web-dev-mastercourse/"
          },
          "CsharpMasterCourse": {
            "Address": "https://localhost:7158/learning-paths/starting-csharp/"
          },
          "GitHubAcclerate": {
            "Address": "https://localhost:7158/courses/accelerate-github/"
          }
        }
      },
      "catchAllCluster": {
        "Destinations": {
          "IamTimCorey": {
            "Address": "https://www.iamtimcorey.com/"
          }
        }
      }
    }

  }
}
